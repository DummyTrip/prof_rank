<html t:type="layout" title="Create New Rulebook"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<!--<t:beaneditform object="rulebook" submitLabel="Create Rulebook"/>-->

<t:form t:id="form" class="form-horizontal" validate="rulebook">
    <t:errors globalOnly="true"/>

    <div class="form-group">
        <t:label for="name" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="name" value="rulebook.name"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
            <t:submit value="Save"/>
            <t:pagelink page="admin/rulebook/index" class="btn btn-default">Cancel</t:pagelink>
        </div>
    </div>

</t:form>

</html>