<html t:type="layout" title="User Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter" xmlns:T="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<div>
    <h2>Users</h2>

    <t:grid source="users" row="user" model="userBeanModel">
        <p:showCell>
            <t:pagelink page="user/showuser" context="user.id">Show</t:pagelink>
        </p:showCell>
        <p:editCell>
            <t:pagelink page="user/edituser" context="user.id">Edit</t:pagelink>
        </p:editCell>
        <p:deleteCell>
            <t:actionlink t:id="delete" context="user.id">Delete</t:actionlink>
        </p:deleteCell>
    </t:grid>

    <p><t:pagelink page="user/createuser">Create new user</t:pagelink></p>

    <hr/>

    <!--<t:grid source="poi" row="po"></t:grid>-->
    <t:loop source="poi" value="po">
        <!--<t:loop source="po" value="p">-->
            <p>${p}</p>
        <!--</t:loop>-->
    </t:loop>

    <!--<p>${poi}</p>-->
    <p></p>
</div>

</html>
