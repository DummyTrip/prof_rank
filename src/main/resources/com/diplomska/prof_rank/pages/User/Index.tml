<html t:type="layout" title="User Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div>
    <h2>Users</h2>

    <t:grid source="users" row="user" model="userBeanModel">
        <p:editCell>
            <t:pagelink page="user/edit" context="user.id">Edit</t:pagelink>
        </p:editCell>
        <p:deleteCell>
            <t:actionlink t:id="delete" context="user.id">Delete</t:actionlink>
        </p:deleteCell>
    </t:grid>

    <p><t:pagelink page="user/createuser">Create new user</t:pagelink></p>

    <hr/>


    <!--<t:grid source="korisnikReferenci" row="korRef" model="korisnikReferenceModel"></t:grid>-->
</div>

</html>
