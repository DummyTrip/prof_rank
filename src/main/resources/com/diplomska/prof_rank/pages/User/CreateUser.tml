<html t:type="layout" title="Create New User"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<!--<t:beaneditform object="user" submitLabel="Create User"/>-->

<t:form t:id="form" class="form-horizontal" validate="user">
    <t:errors globalOnly="true"/>

    <div class="form-group">
        <t:label for="firstName" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="firstName" value="user.firstName"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="fatherName" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="fatherName" value="user.fatherName"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="lastName" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="lastName" value="user.lastName"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="email" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="email" value="user.email"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="role" class="col-sm-3"/>
        <div class="col-sm-3">
            <!--<t:select t:id="role" value="user.role" model="roleSelectModel"/>-->
            <t:selectobject t:id="role" list="roles" value="role" labelField="literal:name"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
            <t:submit value="Save"/>
            <t:pagelink page="user/index" class="btn btn-default">Cancel</t:pagelink>
        </div>
    </div>

</t:form>

</html>