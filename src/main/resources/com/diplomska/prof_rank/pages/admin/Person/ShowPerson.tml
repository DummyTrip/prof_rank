<html t:type="layout" title="Person Show"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div>
    <h2>Person</h2>

    <t:beandisplay object="person"/>

    <!--<t:if test="roleNull">-->
        <!--<h3>Role</h3>-->
        <!--<t:beandisplay object="role"/>-->
    <!--</t:if>-->

    <h3>ReferenceInstances</h3>
    <t:grid source="referenceInstances" row="referenceInstance" model="referenceInstanceBeanModel">
        <p:showCell>
            <t:pagelink page="admin/referenceinstance/showreferenceinstance" context="referenceInstance.id">Show</t:pagelink>
        </p:showCell>
        <p:deleteCell>
            <t:actionlink t:id="deleteReferenceInstance" context="referenceInstance.id">Delete</t:actionlink>
        </p:deleteCell>
    </t:grid>

    <hr/>

    <h3>Reports</h3>
    <t:grid source="reports" row="report" model="reportBeanModel">
        <p:deleteCell>
            <t:actionlink t:id="deleteReport" context="report.id">Delete</t:actionlink>
        </p:deleteCell>
    </t:grid>

    <hr/>
    <br/>
    <br/>
    <hr/>

    <h3>Add Reports</h3>
    <t:grid source="addReports" row="addReport" model="addReportBeanModel">
        <p:addCell>
            <t:actionlink t:id="addReport" context="addReport.id">Add</t:actionlink>
        </p:addCell>
    </t:grid>

    <h3>Add ReferenceInstances</h3>
    <t:grid source="addReferenceInstances" row="addReferenceInstance" model="addReferenceInstanceBeanModel">
        <p:showCell>
            <t:pagelink page="admin/referenceinstance/showreferenceinstance" context="addReferenceInstance.id">Show</t:pagelink>
        </p:showCell>
        <p:addCell>
            <t:actionlink t:id="addReferenceInstance" context="addReferenceInstance.id">Add</t:actionlink>
        </p:addCell>
    </t:grid>

</div>

</html>
