<html t:type="layout" title="Edit Institution"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<!--<t:beaneditform object="institution" submitLabel="Edit Institution"/>-->

<t:form t:id="form" class="form-horizontal" validate="institution">
    <t:errors globalOnly="true"/>

    <div class="form-group">
        <t:label for="name" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="name" value="institution.name"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="city" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="city" value="institution.city"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="country" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="country" t:mixins="autocomplete" value="institution.country"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
            <t:submit value="Save"/>
            <t:pagelink page="admin/institution/index" class="btn btn-default">Cancel</t:pagelink>
        </div>
    </div>

</t:form>

</html>