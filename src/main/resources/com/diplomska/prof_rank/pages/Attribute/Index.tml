<html t:type="layout" title="Attribute Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div>
    <h2>Attributes</h2>

    <t:grid source="attributes" row="attribute" model="attributeBeanModel">
        <p:editCell>
            <t:pagelink page="attribute/editattribute" context="attribute.id">Edit</t:pagelink>
        </p:editCell>
        <p:deleteCell>
            <t:actionlink t:id="delete" context="attribute.id">Delete</t:actionlink>
        </p:deleteCell>
    </t:grid>

    <p><t:pagelink page="attribute/createattribute">Create new attribute</t:pagelink></p>

    <hr/>

</div>

</html>
