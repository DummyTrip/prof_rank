<html t:type="layout" title="Reference Show"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="col-md-4">
        <div class="row">
            <t:form t:id="form">
                <div class="col-md-9">
                    <t:textfield t:id="searchName" t:mixins="autocomplete" value="referenceName" placeholder="Пребарај..."/>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-search ref-text-color" aria-hidden="true"></i>
                    </button>
                </div>
            </t:form>
        </div>

        <h3>Филтрирај:</h3>
        <ul>
            <li>Sekcii</li>
        </ul>

    </div>

    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <h2>Референци</h2>
            </div>
        </div>

        <hr/>

        <t:loop source="references" value="reference">
            <t:delegate to="block:referenceElement"/>


        </t:loop>

    </div>
</div>
<t:block id="referenceElement">

    <div class="row div-shadow white-background ref-list-padding">
        <div class="col-md-11">
            <t:pagelink page="reference/showreference" context="reference.id" class="reference-link">
                <h4 class="ref-text-color no-margin truncate-ref-link">${reference.getName()}</h4>
            </t:pagelink>

        </div>
        <div class="col-md-1">
            <t:pagelink page="reference/createreference" context="reference.id">
                <i class="fa fa-plus-square-o ref-text-color ref-list-icon-size" aria-hidden="true"></i>
            </t:pagelink>
        </div>
    </div>

</t:block>


</html>
