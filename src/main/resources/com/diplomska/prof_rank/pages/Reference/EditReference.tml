<html t:type="layout" title="Edit Reference"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<!--<t:beaneditform object="reference" submitLabel="Edit Reference"/>-->

<t:form t:id="form" class="form-horizontal" validate="reference">
    <t:errors globalOnly="true"/>

    <div class="form-group">
        <t:label for="name" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:textfield t:id="name" value="reference.name"/>
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <t:label for="referenceType" class="col-sm-3"/>
        <div class="col-sm-3">
            <t:select t:id="referenceType" value="reference.referenceType" model="referenceTypeSelectModel"/>
            <!--<t:selectobject t:id="referenceType" list="referenceTypes" value="referenceType" labelField="literal:name"/>-->
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                (required)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
            <t:submit value="Save"/>
            <t:pagelink page="reference/index" class="btn btn-default">Cancel</t:pagelink>
        </div>
    </div>

</t:form>

</html>